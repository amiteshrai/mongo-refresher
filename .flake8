[flake8]
select = ANN,B,B9,BLK,C,D,DAR,E,F,I,S,W
ignore = E203,E501,W503,B903,D105,D107,D212,D415,ANN101
exclude =
    .venv,
    .git,
    __pycache__,
    .mypy_cache,
    .cache,
    notebooks,
    docs,
    build,
    dist
max-line-length = 88
max-complexity = 10
application-import-names = tests
import-order-style = google
docstring-convention = google
per-file-ignores =
    tests/*:S101,
    ANN,
    __init__.py:F401
